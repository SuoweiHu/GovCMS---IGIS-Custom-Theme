
{% set uniqueId = random()                                                                                                                                                                                 %}
{% set classes  = [ 'paragraph', 'paragraph--type--' ~ paragraph.bundle|clean_class, view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class, not paragraph.isPublished() ? 'paragraph--unpublished'] %}

{{ attach_library('igis/jquery-toc') }}

{% block paragraph %}
    <div {{ attributes.addClass(classes).addClass("paragraph-" ~ uniqueId)}}>
        <ul id="paragraph-toc"></ul>
    </div>
{% endblock paragraph %}
