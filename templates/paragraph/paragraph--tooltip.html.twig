{% set tooltip_text_popout     = content.field_tooltip_text[0]["#context"]["value"]                         %}
{% set tooltip_text_button     = content.field_tooltip_button_text[0]["#context"]["value"]                  %}
{% set tooltip_type            = content.field_tooltip_type[0]["#markup"]                                   %}
{% set tooltip_pop_direction   = content.field_tooltip_position[0]["#markup"]                               %}
{% set tooltip_custom_color    = content.field_tooltip_custom_color[0]["#context"]["value"]                 %}
{% set classes                 = [ 'paragraph', 'paragraph--type--' ~ paragraph.bundle|clean_class, view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class, not paragraph.isPublished() ? 'paragraph--unpublished'] %}

{% block paragraph %}
    <div {{ attributes.addClass(classes)}}>
        <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="{{tooltip_pop_direction}}" title="Tooltip on left">
            Tooltip on left
        </button>
        <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Tooltip on top">
            Tooltip on top
        </button>
        <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="right" title="Tooltip on right">
            Tooltip on right
        </button>
        <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Tooltip on bottom">
            Tooltip on bottom
        </button>
        <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="left" title="Tooltip on left">
            Tooltip on left
        </button>
    </div>
    <a href="#" data-toggle="tooltip" title="Some tooltip text!">Hover over me</a>
    <div class="tooltip bs-tooltip-top" role="tooltip">
        <div class="arrow"></div>
        <div class="tooltip-inner">
            Some tooltip text!
        </div>
    </div>
    <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Tooltip on top">
        Tooltip on top
    </button>
    <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="right" title="Tooltip on right">
        Tooltip on right
    </button>
    <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Tooltip on bottom">
        Tooltip on bottom
    </button>
    <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="left" title="Tooltip on left">
        Tooltip on left
    </button>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var DOM_jquery_script = document.createElement('script');
            DOM_jquery_script.src = "https://code.jquery.com/jquery-3.3.1.min.js";
            document.getElementsByTagName('head')[0].appendChild(DOM_jquery_script);
            jQuery.noConflict();
            jQuery('[data-toggle="tooltip"]').tooltip()
        })
    </script>
{% endblock paragraph %}

